<div class="container">

    {{ form_start(form) }}
 
        <h5>{{'E-mail'|trans}}</h5>
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'Password'|trans}}</h5>
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'First name'|trans}}</h5>
            {{ form_errors(form.firstname_user) }}
            {{ form_widget(form.firstname_user, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'Name'|trans}}</h5>
            {{ form_errors(form.name_user) }}
            {{ form_widget(form.name_user, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'Phone number'|trans}}</h5>
            {{ form_errors(form.phone_number_user)}}
            {{ form_widget(form.phone_number_user, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'Street'|trans}}</h5>
            {{ form_errors(form.street_user) }}
            {{ form_widget(form.street_user, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'Post code'|trans}}</h5>
            {{ form_errors(form.post_code_user) }}
            {{ form_widget(form.post_code_user, {'attr': {'class': 'form-control mb-3'}}) }}

        <h5>{{'City'|trans}}</h5>
            {{ form_errors(form.city_user) }}
            {{ form_widget(form.city_user, {'attr': {'class': 'form-control mb-3'}}) }}

        
        {{ form_widget(form) }}
        <button class="btn btn-info mt-3">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

</div>