{% extends 'base.html.twig' %}

{% block title %}{{'User index'|trans}}{% endblock %}

{% block body %}
    <div class="container">

    <h1>{{'User index'|trans}}</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{'Id'|trans}}</th>
                    <th>{{'Email'|trans}}</th>
                    <th>{{'Roles'|trans}}</th>
                    <th>{{'Firstname'|trans}}</th>
                    <th>{{'Name'|trans}}</th>
                    <th>{{'Phone number'|trans}}</th>
                    <th>{{'Street'|trans}}</th>
                    <th>{{'Post code'|trans}}</th>
                    <th>{{'City'|trans}}</th>
                    <th>{{'Actions'|trans}}</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.firstnameUser }}</td>
                    <td>{{ user.nameUser }}</td>
                    <td>{{ user.phoneNumberUser }}</td>
                    <td>{{ user.streetUser }}</td>
                    <td>{{ user.postCodeUser }}</td>
                    <td>{{ user.cityUser }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="13">{{'No records found'|trans}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

        <a class="btn btn-primary" href="{{ path('user_new') }}">{{'Create new'|trans}}</a>
{% endblock %}
