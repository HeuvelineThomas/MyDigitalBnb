{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>firstname_user</th>
                <td>{{ user.firstnameUser }}</td>
            </tr>
            <tr>
                <th>Name_user</th>
                <td>{{ user.nameUser }}</td>
            </tr>
            <tr>
                <th>Phone_number_user</th>
                <td>{{ user.phoneNumberUser }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Created_at</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {%endif%}
            <tr>
                <th>Street_user</th>
                <td>{{ user.streetUser }}</td>
            </tr>
            <tr>
                <th>Post_code_user</th>
                <td>{{ user.postCodeUser }}</td>
            </tr>
            <tr>
                <th>City_user</th>
                <td>{{ user.cityUser }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('user_index') }}">back to list</a>
    {%endif%}
    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
