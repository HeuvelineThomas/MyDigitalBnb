{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <div class="container">

        <table class="table">
            <tbody>
                <tr>
                    <th>{{'Id'|trans}}</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>{{'Email'|trans}}</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>{{'Roles'|trans}}</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>{{'Password'|trans}}</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>{{'Firstname'|trans}}</th>
                    <td>{{ user.firstnameUser }}</td>
                </tr>
                <tr>
                    <th>{{'Name'|trans}}</th>
                    <td>{{ user.nameUser }}</td>
                </tr>
                <tr>
                    <th>{{'Phone_number'|trans}}</th>
                    <td>{{ user.phoneNumberUser }}</td>
                </tr>
                <tr>
                    <th>{{'Created_at'|trans}}</th>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>{{'Updated_at'|trans}}</th>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>{{'Street'|trans}}</th>
                    <td>{{ user.streetUser }}</td>
                </tr>
                <tr>
                    <th>{{'Post_code'|trans}}</th>
                    <td>{{ user.postCodeUser }}</td>
                </tr>
                <tr>
                    <th>{{'City'|trans}}</th>
                    <td>{{ user.cityUser }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('user_index') }}">{{'back to list'|trans}}</a>

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">{{'edit'|trans}}</a>

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
