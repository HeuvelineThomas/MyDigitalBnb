{% extends 'base.html.twig' %}

{% block title %}Housing{% endblock %}

{% block body %}
    <h1>Housing</h1>
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ housing.id }}</td>
                </tr>
                <tr>
                    <th>Title_housing</th>
                    <td>{{ housing.titleHousing }}</td>
                </tr>
                <tr>
                    <th>Description_housing</th>
                    <td>{{ housing.descriptionHousing }}</td>
                </tr>
                <tr>
                    <th>Disponibility_housing</th>
                    <td>{{ housing.disponibilityHousing ? housing.disponibilityHousing|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Price_per_night_housing</th>
                    <td>{{ housing.pricePerNightHousing }}</td>
                </tr>
                <tr>
                    <th>Address_housing</th>
                    <td>{{ housing.streetHousing}} {{ housing.postCodeHousing }} {{ housing.cityHousing}} </td>
                </tr>
                <tr>
                    <th>Type_housing</th>
                    <td>{{ housing.typeHousing }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary" href="{{ path('housing_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-warning" href="{{ path('housing_edit', {'id': housing.id}) }}">edit</a>
    
    {{ include('housing/_delete_form.html.twig') }}
    {%endif%}
{% endblock %}
