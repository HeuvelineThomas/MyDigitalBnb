{% extends 'base.html.twig' %}

{% block title %}{{'Housing'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Housing'|trans}}</h1>
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>{{'Id'|trans}}</th>
                    <td>{{ housing.id }}</td>
                </tr>
                <tr>
                    <th>{{'Title'|trans}}</th>
                    <td>{{ housing.titleHousing }}</td>
                </tr>
                <tr>
                    <th>{{'Description'|trans}}</th>
                    <td>{{ housing.descriptionHousing }}</td>
                </tr>
                <tr>
                    <th>{{'Disponibility'|trans}}</th>
                    <td>{{ housing.disponibilityHousing ? housing.disponibilityHousing|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>{{'Price_per_night'|trans}}</th>
                    <td>{{ housing.pricePerNightHousing }}</td>
                </tr>
                <tr>
                    <th>{{'Address'|trans}}</th>
                    <td>{{ housing.streetHousing}} {{ housing.postCodeHousing }} {{ housing.cityHousing}} </td>
                </tr>
                <tr>
                    <th>{{'Type'|trans}}</th>
                    <td>{{ housing.typeHousing }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    {# Bouton retour à la liste #}
    <a class="btn btn-primary" href="{{ path('housing_index') }}">{{'back to list'|trans}}</a>

    {# Utilisateur connecté en tant qu'admin #}
    {% if is_granted('ROLE_ADMIN') %}

        {# Bouton qui redirige vers l'édition #}
        <a class="btn btn-warning" href="{{ path('housing_edit', {'id': housing.id}) }}">{{'edit'|trans}}</a>
        
        {# Inclusion du formulaire de suppresion #}
        {{ include('housing/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
