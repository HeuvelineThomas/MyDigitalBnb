{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id'|trans}}</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>{{'Arrival date'|trans}}</th>
                <td>{{ reservation.arrivalDateReservation ? reservation.arrivalDateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{'Departude date'|trans}}</th>
                <td>{{ reservation.departudeDateReservation ? reservation.departudeDateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{'Date'|trans}}</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{'Housing'|trans}}</th>
                <td>{{ reservation.reservationHousing}}</td>
            </tr>
            <tr>
                <th>{{'User'|trans}}</th>
                <td>{{ reservation.ReservationUserId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">{{'back to list'|trans}}</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">{{'edit'|trans}}</a>
        {{ include('reservation/_delete_form.html.twig') }}
        
    {% endif %}
{% endblock %}
